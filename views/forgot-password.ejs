<link rel="stylesheet" href="/registration.css" />

<!-- Container for the sign-in form with margin and alignment classes -->
<div class="box-design-1 mt-4 mb-4 justify-content-center align-items-center">
    <div class="form-container">

      <!-- Title for the sign-in form -->
      <h1 class="title-with-line">Forgot Password</h1>

      <!-- Sign-in form with POST method -->
      <form id="forgot-password-form" action="/forgot-password" method="POST">
        
        <!-- Email input field -->
        <div class="mb-3">
          <label for="email-forgot-password" class="form-label"><b>Email</b></label>
          <input
            type="text"
            class="form-control"
            id="email-forgot-password"
            name="email"
            placeholder="Enter your email"
            required
            autocomplete="off"
          />

          <!-- Container for displaying password validation errors -->
          <div class="error-container">
            <i
              id="password-signin-error-icon"
              class="bi bi-exclamation-triangle-fill error-icon"
              style="display: none"
            ></i>
            <div id="password-signin-error" class="text-danger"></div>
          </div>
        </div>
  
        <!-- Separator line -->
        <hr class="mt-4 mb-4" />
  
        <!-- Submit button -->
        <button type="submit" class="btn-design-1">Send one time password reset email</button>
      </form>
    </div>
  </div>
  
  <script>
    // Add event listener for form submission
    document
      .getElementById("signin-form")
      .addEventListener("submit", function (event) {
        let valid = true; // Flag to track form validity
  
        // Clear previous errors
        document.getElementById("username-signin-error").textContent = "";
        document.getElementById("password-signin-error").textContent = "";
  
        // Hide error icons
        document.getElementById("username-signin-error-icon").style.display = "none";
        document.getElementById("password-signin-error-icon").style.display = "none";
  
        // Validate Username
        const username = document.getElementById("username-signin").value;
        if (username.length < 5) {
          document.getElementById("username-signin-error").textContent =
            "Username must be at least 5 characters!";
          document.getElementById("username-signin-error-icon").style.display = "inline";
          valid = false;
        }
  
        // Validate Password
        const password = document.getElementById("password-signin").value;
        if (password.length < 8) {
          document.getElementById("password-signin-error").textContent =
            "Password must be at least 8 characters!";
          document.getElementById("password-signin-error-icon").style.display = "inline";
          valid = false;
        }
  
        // Prevent form submission if validation fails
        if (!valid) {
          event.preventDefault();
        }
      });
  </script>
  